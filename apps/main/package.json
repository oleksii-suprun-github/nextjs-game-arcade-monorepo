    "@contentful/rich-text-types": "^16.8.1",
    "@typescript-eslint/eslint-plugin": "^7.14.1",
    "husky": "^9.0.11",
    "jsdom": "^24.1.0",
    "lint-staged": "^15.2.7",
    "vite-tsconfig-paths": "^4.3.2"
  },
  "lint-staged": {
    "*.{test.ts,test.tsx}": [
