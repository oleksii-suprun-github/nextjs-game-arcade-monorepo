{
  "name": "@nextjs-game-arcade-monorepo/main",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "nx serve --verbose",
    "build": "nx build",
    "start": "nx start",
    "lint": "nx lint",
    "test": "vitest --u",
