{
  "compileOnSave": false,
  "compilerOptions": {
    "jsx": "preserve",
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": [
      "es2020",
      "dom"
    ],
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@components": [
        "libs/shared/components/src/index.ts"
      ],
      "@context/*": [
        "libs/shared/context/src/*"
      ],
      "@ui-lib": [
        "libs/shared/ui-lib/src/index.ts"
      ],
      "@utils/*": [
        "libs/shared/utils/src/*"
      ]
    }
  },
  "include": [
    "next-env.d.ts",
    "libs/**/*.ts",
    "libs/**/*.tsx"
  ],
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
